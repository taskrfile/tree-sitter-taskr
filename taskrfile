// define some tasks
task clear:
  run   = clear // clears the screen
  alias = c

task generate:
  desc  = generate parser // TODO: highlight
  run   = tree-sitter generate // runs the tree-sitter cli
  alias = g

task parse:
  desc  = parses this taskrfile and prints the output
  run   = tree-sitter parse taskrfile
  alias = p
  needs = c, g

task highlight:
  run   = tree-sitter highlight taskrfile
  alias = h
  needs = g

task build:
  run   = tree-sitter build
  alias = b
  needs = g

task test:
  desc  = run the tests
  run   = tree-sitter test
  alias = t
  needs = g, b
